.shopify-section--product-recommendations .section-header h2 { font-size: var(--text-h2); color: rgb(var(--heading-color)); --heading-text-transform: capitalize; }
.shopify-section--product-recommendations .section-stack { --section-stack-spacing-block: 2.5rem; }



@media screen and (max-width: 999px) {
  product-recommendations scroll-carousel { --container-outer-width: 20px; } 
  .shopify-section--product-recommendations .section-header h2 { font-size: calc(var(--text-h6, 28px) + var(--text-sm, 0)); }
}
@media screen and (max-width: 699px) {
  product-recommendations .product-list { display: flex; flex-wrap: wrap; flex-direction: row; }
  product-recommendations .product-list product-card { width: calc(50% - 10px/2); }
  product-recommendations .product-list product-card:nth-child(4)~.product-card { display: none; }
}


